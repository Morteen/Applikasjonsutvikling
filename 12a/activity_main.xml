<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/labelBreddeView"
        android:text="Breddegrad:"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
         />

    <TextView
        android:id="@+id/displayBreddeView"
        android:hint="lat"
        android:text=""
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/labelBreddeView"
        />

    <TextView
        android:id="@+id/labelLengdeView"
        android:text="Lengdegrad:"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelBreddeView"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/displayLengdeView"
        android:hint="long"
        android:text=""
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/labelLengdeView"
        android:layout_below="@+id/displayBreddeView"
        />


    <Button
        android:id="@+id/kart_button"
        android:text="Vis i kart"
        android:onClick="visIKart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayLengdeView"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/adresse_button"
        android:text="Finn adresse"
        android:onClick="finnAdresser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayLengdeView"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/adresseHeadView"
        android:text="Nærmeste adresse:"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kart_button"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/displayAdresseView"
        android:text="---"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adresseHeadView"
        android:layout_alignParentLeft="true"
        />

    <Spinner
        android:id="@+id/spinnerAdresser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/displayAdresseView" />


</RelativeLayout>
